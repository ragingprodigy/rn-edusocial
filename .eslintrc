{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["log"]
      }
    ]
  },

  "globals": {
    "React": true
  },

  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },

  "extends": [ "eslint:recommended", "plugin:react/recommended", "plugin:flowtype/recommended" ],
  "plugins": [ "react", "react-native", "flowtype" ]
}